<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Current Bookings</title>
    <link rel="stylesheet" href="/css/bookingstyle.css">

    <link rel="icon" type="image/x-icon" href="/Images/favicon.ico.png">
</head>
<body>
    <header>

        <a href="/main">
            <img src="/Images/logo.PNG" alt="select park logo">
            </a>
           
             <ul>
                <li><a href="/account">Account</a></li>
                <li class="dropdown">
                    <a href="/booking" class="dropbtn">Reservation</a>
                    <div class="dropdown-content">
                        <a href="/future">Reservations</a>
                        <a href="/past">Past Reservation</a>
                    </div>
                  </li>

                <li><a href="/report">Report</a></li>
                <li><a href="/feedback">Feedback</a></li>
                <li><a href="/moreinfo">More Information</a></li>
                <li class="logoutbtn"><a href="/login">Logout</a></li>
            </ul>

            </header>
            <main class="past-booking">

                <h2>Past Bookings</h2>
    
                
    
                <table>
    
                  <thead>
                    <tr> 
                        <th>Lot</th><th>Date</th><th>Time-In</th><th>Time-Out</th><th>Price</th> 
                    </tr>
                </thead>
                <tbody>
                  <% if (pastBooking.length > 0) { %>
    
                    <% pastBooking.forEach(function(past) { %>
                        <tr> 
                            <td><%= past.lot %></td>
                            <td><%= past.date %></td>
                            <td><%= past.startTime %></td>
                            <td><%= past.endTime %></td>
                            <td><%= past.price %></td>
                        </tr>
                    <% }); %>
    
                    <% } else { %>
                      <tr><td colspan="5" class="error-msg">No past Bookings</td></tr>               
                       <% } %>
                </tbody>
                </table>
                <br>
    
              </main>
      <footer class="past-footer">
          
              <p>Created by Group 4 </p> 
  
      </footer>
      
  </body>
  </html>