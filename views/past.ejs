<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Past Bookings</title>
    <link rel="stylesheet" href="styles/bookingstyle.css">

    <link rel="icon" type="image/x-icon" href="Images/favicon.ico.png">
</head>
<body>
    <header>

        <img src="Images/logo.PNG" alt="select park logo">

           
             <ul>
                <li><a href="Account.html">Account</a></li>
                <li class="dropdown">
                    <a href="booking.html" class="dropbtn">Reservation</a>
                    <div class="dropdown-content">
                      <a href="current.html">Current Reservation</a>
                      <a href="future.html">Future Reservation</a>
                      <a href="past.html">Past Reservation</a>
                    </div>
                  </li>

                <li><a href="report.html">Report</a></li>
                <li><a href="feedback.html">Feedback</a></li>
                <li><a href="moreinfo.html">More Information</a></li>
            </ul>

            </header>

            <main class="past-booking">

              <h2>Past Bookings</h2>
  
              
  
              <table>
  
                <thead>
                  <tr> 
                      <th>Lot</th><th>Date</th><th>Time-In</th><th>Time-Out</th><th>Price</th> 
                  </tr>
              </thead>
              <tbody>
                <% if (pastBooking.length > 0) { %>
  
                  <% pastBooking.forEach(function(past) { %>
                      <tr> 
                          <td><%= past.lot %></td>
                          <td><%= past.date %></td>
                          <td><%= past.startTime %></td>
                          <td><%= past.endTime %></td>
                          <td><%= past.price %></td>
                      </tr>
                  <% }); %>
  
                  <% } else { %>
                    <tr><td colspan="5" class="error-msg">No past Bookings</td></tr>               
                     <% } %>
              </tbody>
              </table>
              <br>
  
            </main>
    <footer>
        
            <p>Created by Group 4 </p> 

    </footer>
    
</body>
</html>