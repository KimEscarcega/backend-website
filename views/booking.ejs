<body>

    <header>

      <a href="/main">
        <img src="/Images/logo.PNG" alt="select park logo">
        </a>

           
             <ul>
                <li><a href="/account">Account</a></li>
                <li class="dropdown">
                    <a href="/booking" class="dropbtn">Reservation</a>
                    <div class="dropdown-content">
                      <a href="/future">Reservations</a>
                      <a href="/past">Past Reservation</a>
                    </div>
                  </li>

                <li><a href="/report">Report</a></li>
                <li><a href="/feedback">Feedback</a></li>
                <li><a href="/moreinfo">More Information</a></li>
                <li class="logoutbtn"><a href="/login">Logout</a></li>
            </ul>

            </header>

          <main>



    
            <div class="container">

            <img src="/Images/location.png" alt="Location icon"/><p><b>University of North Texas at Dallas</b></p>

            </div>




            <form id="booking" action="/booking" method="POST">

            <div class="date">
            <label for="date-input">Date:</label>
            <input id="date" name="date" type="date" required min="">
            </div>


            <div class="time">
                <p><b>Time</b></p>
            </div>
            

            <div class="input-time">

            <div class="start-button">
            <label for="startTime">Start: </label>
            <input id="startTime" name="startTime" type="time" required min="">
            </div>

            <div class="end-button">
            <label for="end">End: </label>
            <input id="endTime" name="endTime" type="time" required min="">
            </div>

            </div>



            <div class="buttons">

              <input type="submit" value="confirm" class="cnfm">                
            </div>

            </form>

          </main>
          
    <footer>
        
